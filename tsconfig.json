{
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "moduleResolution": "node",
    "outDir": "./modules",
    "rootDir": "./modules",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["modules/**/*.ts"],
  "exclude": ["node_modules"]
}
